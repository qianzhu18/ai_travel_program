/* P6 照片生成结果页样式 */

/* ========== 容器 ========== */
.container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background: #FDF9F6;
  display: flex;
  flex-direction: column;
}

/* ========== 顶部导航栏 ========== */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #FDF9F6;
}

.navbar-content {
  display: flex;
  align-items: center;
  position: relative;
  padding: 0 16rpx;
}

.nav-back {
  display: flex;
  align-items: center;
  padding: 0 16rpx;
  height: 100%;
}

.back-arrow {
  font-size: 44rpx;
  color: #333333;
  font-weight: 300;
  line-height: 1;
  margin-right: 4rpx;
}

.back-text {
  font-family: 'PingFang SC', 'Arimo', 'Inter', sans-serif;
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  line-height: 1;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

/* ========== 加载状态 ========== */
.loading-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
}

.spinner-ring {
  width: 100%;
  height: 100%;
  border: 6rpx solid rgba(111, 93, 85, 0.2);
  border-top-color: #6F5D55;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #6F5D55;
}

/* ========== 主内容区 ========== */
.main-content {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 160rpx; /* 底部栏高度 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;
  overflow: hidden;
  /* 修复：使用calc明确计算高度，确保子元素百分比高度生效 */
  box-sizing: border-box;
}

/* ========== 图片展示区域 ========== */
.image-section {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 图片容器 */
.frame-container {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 结果图片 - 修复：使用明确的尺寸而非auto */
.result-image {
  width: 100%;
  height: 100%;
  border-radius: 0;
  display: block;
  object-fit: contain;
}

.result-swiper {
  width: 100%;
  height: 100%;
}

/* 修复：swiper-item内的图片也需要明确尺寸 */
.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 0;
  object-fit: contain;
}

/* ========== 左右箭头 ========== */
.arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 20;
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.arrow-left {
  left: 10rpx;
}

.arrow-right {
  right: 10rpx;
}

.arrow-icon {
  font-size: 50rpx;
  color: #5D5A5A;
  font-weight: 500;
  line-height: 1;
}

.arrow:active {
  background: rgba(255, 255, 255, 0.95);
  transform: translateY(-50%) scale(0.95);
}

/* ========== 空状态 ========== */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty-text {
  font-size: 32rpx;
  color: #6F5D55;
  margin-bottom: 32rpx;
}

.empty-btn {
  padding: 24rpx 64rpx;
  background: #E89A8D;
  border-radius: 48rpx;
}

.empty-btn text {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* ========== 底部操作栏 ========== */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  background: #FFFFFF;
  height: 160rpx;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
  flex: 1;
}

/* 重置button默认样式 */
.action-btn.share-btn {
  background: transparent;
  min-height: auto;
  font-size: inherit;
  flex: 1;
}

.action-btn.share-btn::after {
  border: none;
}

/* 按钮图标（已包含圆底） */
.btn-icon-full {
  width: 96rpx;
  height: 96rpx;
}

/* IP头像图标（放大） */
.ip-avatar-icon {
  width: 160rpx;
  height: 160rpx;
}

.btn-label {
  font-family: 'Inter', sans-serif;
  font-size: 28rpx;
  font-weight: 400;
  color: #6F5D55;
  letter-spacing: 0.02em;
  margin-top: 8rpx;
}
