/* P10 我的照片页样式 */
.container {
  min-height: 100vh;
  background-color: #fdf9f6;
  display: flex;
  flex-direction: column;
}

/* ========== 自定义导航栏 ========== */
.custom-navbar {
  background-color: #fdf9f6;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.navbar-back {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #333;
}

.navbar-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.navbar-placeholder {
  width: 80rpx;
}

/* ========== 照片列表滚动区域 ========== */
.photos-scroll {
  flex: 1;
  min-height: 0;
}

.photos-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  padding: 16rpx;
}

/* ========== 照片卡片 ========== */
.photo-item {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.photo-preview {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.photo-image {
  width: 100%;
  height: 100%;
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
}

.status-completed {
  background: rgba(82, 196, 26, 0.9);
}

.status-processing {
  background: rgba(24, 144, 255, 0.9);
}

.status-failed {
  background: rgba(255, 77, 79, 0.9);
}

.status-pending {
  background: rgba(250, 173, 20, 0.9);
}

/* 处理中遮罩 */
.processing-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.processing-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 照片信息栏 */
.photo-info {
  padding: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.photo-date {
  font-size: 24rpx;
  color: #999999;
}

.photo-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.6;
}

/* ========== 加载状态 ========== */
.loading,
.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx;
  color: #bcaea8;
  font-size: 28rpx;
}

.load-more.no-more {
  color: #ccc;
}

/* ========== 空状态 ========== */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 48rpx;
  text-align: center;
}

.btn-start {
  padding: 24rpx 72rpx;
  background: linear-gradient(135deg, #e89a8d 0%, #d4956b 100%);
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 48rpx;
}

.btn-start::after {
  border: none;
}
