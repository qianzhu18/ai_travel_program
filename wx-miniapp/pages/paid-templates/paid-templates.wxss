/* P8 付费模板选择页样式 */
page {
  height: 100%;
  background-color: #fdf9f6;
}

.container {
  height: 100vh;
  background-color: #fdf9f6;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* ========== 自定义导航栏 ========== */
.custom-navbar {
  background-color: #fdf9f6;
  flex-shrink: 0;
  position: relative;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  padding: 0 30rpx;
}

/* 返回按钮 */
.nav-back {
  display: flex;
  align-items: center;
  padding: 0;
}

.back-arrow {
  font-size: 44rpx;
  color: #000000;
  font-weight: 300;
  line-height: 1;
  margin-right: 4rpx;
}

.back-text {
  font-size: 28rpx;
  font-weight: 400;
  color: #000000;
}

.navbar-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
  flex: 1;
  text-align: center;
}

/* 积分徽章 */
.points-badge {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #f5e6d8 0%, #ead5c5 100%);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.points-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.points-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #d4956b;
}

/* ========== 筛选栏（景点+人群类型） ========== */
.filter-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 16rpx 30rpx;
  background-color: #fdf9f6;
  flex-shrink: 0;
  /* 添加过渡动画 */
  transition: all 0.3s ease-out;
  transform: translateY(0);
  opacity: 1;
}

/* 筛选栏显示状态 */
.filter-bar-show {
  transform: translateY(0);
  opacity: 1;
  height: auto;
  padding: 16rpx 30rpx;
}

/* 筛选栏隐藏状态 */
.filter-bar-hide {
  transform: translateY(-100%);
  opacity: 0;
  height: 0;
  padding: 0 30rpx;
  overflow: hidden;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-radius: 40rpx;
  border: 2rpx solid #e0d8d4;
}

.city-selector {
  flex: 1;
}

.spot-selector {
  flex: 1;
}

.location-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.filter-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 6rpx;
}

.filter-text {
  font-size: 28rpx;
  /* 统一为Web端颜色 #6f5d55 */
  color: #6f5d55;
  font-weight: 400;
  letter-spacing: 0.1em;
  max-width: 4em;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow-icon {
  width: 20rpx;
  height: 20rpx;
  margin-left: 8rpx;
}

.arrow-down {
  font-size: 20rpx;
  /* 统一为Web端颜色 #6f5d55 */
  color: #6f5d55;
  margin-left: 12rpx;
}

/* ========== 标签栏部分 ========== */
.tabs-wrapper {
  background-color: #fdf9f6;
  padding: 2vw 6vw 0 6vw;
  white-space: nowrap;
  flex-shrink: 0;
  border-bottom: 1rpx solid #f0ebe7;
}

.tabs {
  display: inline-flex;
  gap: 4vw;
  padding-bottom: 4vw;
}

.tab-item {
  position: relative;
  display: inline-block;
  flex-shrink: 0;
}

.tab-text {
  font-size: clamp(26rpx, 6vw, 34rpx);
  color: #bcaea8;
  transition: color 0.3s;
  white-space: nowrap;
  font-weight: 400;
}

.tab-item.active .tab-text {
  color: #dfbab4;
  font-weight: 500;
}

.tab-indicator {
  position: absolute;
  bottom: -4vw;
  left: 0;
  right: 0;
  height: 3rpx;
  background-color: #e89a8d;
  border-radius: 0 0 2rpx 2rpx;
}

/* ========== 模板列表部分 ========== */
.templates-swiper {
  flex: 1;
  height: 0;
}

.templates-scroll {
  flex: 1;
  height: 0;
  background-color: #fdf9f6;
}

.waterfall {
  display: flex;
  gap: 3vw;
  padding: 10rpx 6vw 200rpx 6vw; /* 底部留出购物车空间 */
}

.column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4.5vw;
}

.template-item {
  position: relative;
  border-radius: 6vw;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 4rpx 0 rgba(0, 0, 0, 0.15);
  aspect-ratio: 9 / 13.5;
}

.template-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
  object-position: center;
}

/* 积分标签 */
.points-tag {
  position: absolute;
  bottom: 16rpx;
  left: 16rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  z-index: 2;
}

.points-tag text {
  font-size: 22rpx;
  color: #fff;
}

/* 扇形勾选热区 - 以右下角为圆心 */
.select-hotarea {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 160rpx;
  height: 160rpx;
  z-index: 4; /* 高于勾选框 */
  /* 使用clip-path创建扇形热区 */
  clip-path: circle(160rpx at 100% 100%);
}

/* 勾选框（右下角圆角方形） */
.select-checkbox {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  width: 56rpx;
  height: 56rpx;
  box-sizing: border-box;
  background: rgba(253, 249, 246, 0.3);
  border: 2rpx solid #ffffff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3;
  transition: all 0.2s ease;
  pointer-events: none; /* 禁用勾选框本身的点击，由热区处理 */
}

.select-checkbox.selected {
  background: rgba(253, 249, 246, 0.6);
  border: 2rpx solid #ffffff;
}

.checkbox-icon {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  line-height: 1;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: #bcaea8;
  font-size: 28rpx;
}

/* 空状态 */
.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400rpx;
  padding: 40rpx;
}

.empty-text {
  color: #bcaea8;
  font-size: 28rpx;
}

/* ========== 骨架屏 ========== */
.skeleton {
  background: transparent;
}

.skeleton-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, #f0ebe7 25%, #f5f0ed 50%, #f0ebe7 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 6vw;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* ========== 全屏选择器（景点+人群类型） ========== */
.fullpage-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fdf9f6;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.fullpage-header {
  background: #fdf9f6;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  flex-shrink: 0;
}

.fullpage-back {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  min-width: 120rpx;
}

.fullpage-back .back-arrow {
  font-size: 44rpx;
  /* 统一为Web端颜色 #6f5d55 */
  color: #6f5d55;
  font-weight: 300;
  line-height: 1;
  margin-right: 4rpx;
}

.fullpage-back .back-label {
  font-size: 28rpx;
  /* 统一为Web端颜色 #6f5d55 */
  color: #6f5d55;
  font-weight: 400;
}

.fullpage-title {
  font-size: 32rpx;
  font-weight: 400;
  /* 统一为Web端颜色 #6f5d55 */
  color: #6f5d55;
  flex: 1;
  text-align: center;
}

.fullpage-placeholder {
  min-width: 120rpx;
}

/* 照片类型tabs（单照/合照） */
.photo-type-tabs {
  display: flex;
  border-bottom: 1rpx solid #e0d8d4;
  flex-shrink: 0;
}

.photo-type-tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #bcaea8;
  position: relative;
}

.photo-type-tab {
  color: #5d5a5a;
  font-weight: 500;
}

/* 两列布局 */
.two-column-body {
  flex: 1;
  display: flex;
  overflow: hidden;
  height: 0; /* 让 flex: 1 正确计算高度 */
}

.left-column {
  width: 50%;
  height: 100%;
  background: #f5f0ed;
  border-right: 1rpx solid #e0d8d4;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.right-column {
  width: 50%;
  height: 100%;
  background: #fdf9f6;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.column-item {
  padding: 32rpx 40rpx;
  font-size: 30rpx;
  color: #5d5a5a;
  min-height: 40rpx;
}

.column-item:active {
  background: rgba(0, 0, 0, 0.05);
}

.column-item-hover {
  background: rgba(0, 0, 0, 0.08) !important;
}

.column-item.active {
  color: #333333;
  background: #f5ebe6;
  font-weight: 500;
}

/* ========== 底部购物车栏 ========== */
.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, rgba(253, 249, 246, 0.95) 0%, rgba(253, 249, 246, 1) 10%);
  backdrop-filter: blur(20rpx);
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0ebe7;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  gap: 20rpx;
  z-index: 100;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.ip-avatar-wrapper {
  flex-shrink: 0;
  width: 140rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ip-avatar-img {
  width: 140rpx;
  height: 140rpx;
}

.ip-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #e89a8d 0%, #d4956b 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  box-shadow: 0 4rpx 16rpx rgba(232, 154, 141, 0.4);
}

.cart-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.cart-main {
  display: flex;
  align-items: baseline;
  gap: 6rpx;
  line-height: 1;
}

.cart-label {
  font-size: 24rpx;
  color: #8a7c73;
}

.cart-price {
  font-size: 44rpx;
  font-weight: 600;
  color: #e89a8d;
}

.cart-unit {
  font-size: 24rpx;
  color: #e89a8d;
}

.cart-sub {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  font-size: 22rpx;
  color: #bcaea8;
}

.cart-sub {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 22rpx;
  color: #999;
}

.cart-deduct {
  color: #e89a8d;
}

.cart-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.cart-value.highlight {
  color: #e89a8d;
  font-weight: 600;
}

.cart-value.price {
  font-size: 32rpx;
  color: #e89a8d;
  font-weight: 600;
}

/* 支付按钮包装器（带角标） */
.pay-btn-wrapper {
  position: relative;
  flex-shrink: 0;
}

.selected-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  min-width: 36rpx;
  height: 36rpx;
  /* 统一为Web端颜色 #d9534f */
  background: #d9534f;
  color: #fff;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(217, 83, 79, 0.4);
}

.pay-btn {
  width: 200rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #e89a8d 0%, #d4956b 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(232, 154, 141, 0.4);
  flex-shrink: 0;
}

.pay-btn::after {
  border: none;
}

.pay-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 加载更多提示 */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0 40rpx;
  color: #bcaea8;
  font-size: 26rpx;
}
