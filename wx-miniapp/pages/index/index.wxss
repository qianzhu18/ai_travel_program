/* pages/index/index.wxss */
.container {
  height: 100vh;
  background-color: #fdf9f6;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* ========== 自定义导航栏 ========== */
.custom-navbar {
  background-color: #fdf9f6;
  flex-shrink: 0;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.navbar-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
  text-align: center;
}

/* ========== 标签栏部分 ========== */
/* 标签栏容器 */
.tabs-wrapper {
  background-color: #fdf9f6;
  padding: 2vw 6vw 0 6vw;
  white-space: nowrap;
  flex-shrink: 0;
  border-bottom: 1rpx solid #f0ebe7;
}

/* 标签栏内容 */
.tabs {
  display: inline-flex;
  gap: 4vw;
  padding-bottom: 4vw;
}

/* 单个标签项 */
.tab-item {
  position: relative;
  display: inline-block;
  flex-shrink: 0;
}

/* 标签文本 */
.tab-text {
  font-size: clamp(26rpx, 6vw, 34rpx);
  color: #bcaea8;
  transition: color 0.3s;
  white-space: nowrap;
  font-weight: 400;
}

/* 激活标签 */
.tab-item.active .tab-text {
  color: #dfbab4;
  font-weight: 500;
}

/* 标签下划线 */
.tab-indicator {
  position: absolute;
  bottom: -4vw;
  left: 0;
  right: 0;
  height: 3rpx;
  background-color: #e89a8d;
  border-radius: 0 0 2rpx 2rpx;
}

/* ========== 模板列表部分 ========== */
/* Swiper 容器 */
.templates-swiper {
  flex: 1;
  height: 0;
}

/* 模板列表滚动区域 */
.templates-scroll {
  height: 100%;
}

/* 瀑布流容器 */
.waterfall {
  display: flex;
  gap: 3vw;
  padding: 10rpx 6vw 8vw 6vw;
}

/* 瀑布流列 */
.column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4.5vw;
}

/* 模板卡片 */
.template-item {
  position: relative;
  border-radius: 6vw;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 4rpx 0 rgba(0, 0, 0, 0.15);
  aspect-ratio: 9 / 13.5;
}

/* 模板图片 */
.template-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
  object-position: center;
}


/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: #bcaea8;
  font-size: 14rpx;
}

/* 空状态 */
.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.empty-text {
  color: #bcaea8;
  font-size: 28rpx;
}

/* 无数据状态 */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.retry-btn {
  margin-top: 30rpx;
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, #e89a8d 0%, #d4956b 100%);
  border-radius: 40rpx;
  color: #fff;
  font-size: 28rpx;
}

/* ========== 骨架屏 ========== */
.skeleton {
  background: transparent;
}

.skeleton-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, #f0ebe7 25%, #f5f0ed 50%, #f0ebe7 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 6vw;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0 40rpx;
  color: #bcaea8;
  font-size: 26rpx;
}
